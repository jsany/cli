{
  "name": "cli-kit",
  "version": "1.0.0",
  "description": "The typescript scaffold demo",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "typings.d.ts",
  "bin": {
    "cli-kit": "bin/index.js"
  },
  "files": ["lib", "bin", "typings.d.ts", ".clikitrc.json", "templates"],
  "scripts": {
    "build": "rimraf lib/* && ttsc",
    "postinstall": "node scripts/postinstall.js",
    "watch": "ttsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,md,json}": ["prettier --write"],
    "package.json": ["sort-package-json"]
  },
  "dependencies": {
    "cac": "^6.5.10",
    "chalk": "^4.1.0",
    "clipboardy": "^2.3.0",
    "consolidate": "^0.15.1",
    "download-git-repo": "^3.0.2",
    "enquirer": "^2.3.5",
    "envinfo": "^7.5.1",
    "fs-extra": "^9.0.1",
    "handlebars": "^4.7.6",
    "metalsmith": "^2.3.0",
    "ora": "^4.0.4",
    "progress": "^2.0.3",
    "semver": "^7.3.2",
    "update-notifier": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/consolidate": "^0.14.0",
    "@types/fs-extra": "^9.0.1",
    "@types/metalsmith": "^2.3.0",
    "@types/node": "^14.0.14",
    "@types/semver": "^7.3.1",
    "@types/update-notifier": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-alloy": "^3.7.3",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.44.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.5",
    "typescript-transform-paths": "^2.0.0"
  },
  "engines": {
    "node": ">=8.10.0"
  }
}
